
<style>
  .gantt-timeline-day {
    width: {{dayWidthPx}};
  }

</style>

Day width (px): {{input value=dayWidth}}

<br><br>

<div class="gantt-chart-inner">

  <div class="gantt-chart-grid">

    {{! today line }}
    {{#if showToday}}
      <div class="gant-timeline-today" style={{todayStyle}}><div></div></div>
    {{/if}}

    {{! vertical grid}}
    <div class="gantt-chart-grid-vertical">
      <div class="gantt-line">
        {{!--<div class="gantt-line-title"></div>--}}
        <div class="gantt-line-timeline">
         {{#each timelineMonths as |month|}}
            <div class="gantt-timeline-month">
              {{#each month.days as |day|}}
                <div class="gantt-timeline-day {{if day.isWeekend 'gantt-timeline-day-weekend'}}"> </div>
              {{/each}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>


  {{! header }}
  <div class="gantt-chart-header">
    <div class="gantt-line">
      <div class="gantt-line-title"><span>Projekt/Job</span></div>
      <div class="gantt-line-timeline">
       {{#each timelineMonths as |month|}}
          <div class="gantt-timeline-month">
            <div class="gantt-timeline-month-name">
              <span>{{moment-format month.date 'MMMM YYYY'}}</span>
            </div>
            {{#each month.days as |day|}}
              <div class="gantt-timeline-day {{if day.isWeekend 'gantt-timeline-day-weekend'}}">{{day.nr}}</div>
            {{/each}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>



  {{! lines and sublines }}
  <div class="gant-lines">
    {{yield
      (hash
        line=(component "gantt-line" chart=this  )
      )
    }}
  </div>


</div>

{{!--
	select=this
	register=(action 'registerOption')
	unregister=(action 'unregisterOption')
--}}